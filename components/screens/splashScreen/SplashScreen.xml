<?xml version="1.0" encoding="utf-8" ?>
<component name="SplashScreen" extends="Group">
    <children>
        <!-- Splash Background Image -->
        <Poster
            id="splashImage"
            uri="pkg:/images/channel-splash-fhd.jpg"
            translation="[0,0]"
            width="1920"
            height="1080"
            loadDisplayMode="scaleToZoom"
        />

        <!-- Loading Text -->
        <Label
            id="loadingText"
            text="Loading..."
            translation="[860, 900]"
            width="200"
            height="60"
            horizAlign="center"
            vertAlign="center"
            font="font:LargeBoldSystemFont"
            color="0xFFFFFFFF"
        />

        <!-- Loading Animation (simple opacity animation) to make for nice UX -->
        <Animation
            id="loadingAnimation"
            duration="1.5"
            repeat="true"
            easeFunction="linear"
        >
            <FloatFieldInterpolator
                id="opacityInterpolator"
                key="[0.0, 0.5, 1.0]"
                keyValue="[1.0, 0.3, 1.0]"
                fieldToInterp="loadingText.opacity"
            />
        </Animation>
        
        <!-- Timer for minimum display duration -->
        <Timer
            id="minimumDisplayTimer"
            duration="3"
            repeat="false"
        />
    </children>

    <script type="text/brightscript" uri="pkg:/components/screens/splashScreen/SplashScreen.brs" />
</component>
